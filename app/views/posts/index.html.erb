<!DOCTYPE html>
<html>
<head>
  <title>MicroBlog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div class="container">
    <h1>Microblog Posts</h1>
    <table class="post-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Actions</th>
          <th>Published</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr class="post">
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.content %></td>
            <td>
            <%= button_to 'Delete', post_path(post), method: :delete, class: 'delete-link', data: { confirm: 'Are you sure?' } %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= button_to 'Publish', publish_post_path(post), method: :patch, class: 'publish-button' %>
            <%= button_to 'Unpublish', unpublish_post_path(post), method: :patch, class: 'unpublish-button' %>
            </td>
          <td><%= post.published ? 'Published' : 'Unpublished' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Post', new_post_path %>
  </div>
</body>
</html>
