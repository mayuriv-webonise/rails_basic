<%= form_for @post do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
  
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
  
    <div class="field">
      <%= f.label :publish %>
      <%= f.check_box :publish %>
    </div>
  
    <div class="actions">
      <%= f.submit 'Save' %>
    </div>
  <% end %>
  